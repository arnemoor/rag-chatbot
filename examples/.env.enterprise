# Enterprise Configuration - Advanced setup with multiple AI providers
# Copy this file to ../.env and update with your values

# Required - Cloudflare Credentials
CLOUDFLARE_ACCOUNT_ID=your-account-id-here
CLOUDFLARE_API_TOKEN=your-api-token-here

# Required - AutoRAG Instance
AUTORAG_INSTANCE_ID=enterprise-autorag-instance

# Required - R2 Bucket
R2_BUCKET_NAME=enterprise-documents

# Enterprise Settings
DEBUG_MODE=false
ENVIRONMENT=production

# Security - Strict CORS for enterprise domains
ALLOWED_ORIGINS=https://portal.enterprise.com,https://app.enterprise.com,https://admin.enterprise.com

# External AI Providers
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# AI Gateway Configuration
GATEWAY_NAME=enterprise-gateway

# Session Storage (KV Namespace)
# Create with: npx wrangler kv:namespace create SESSIONS
# SESSIONS_NAMESPACE_ID=your-kv-namespace-id

# Advanced Features
ENABLE_ANALYTICS=true
ENABLE_AUDIT_LOG=true
MAX_REQUESTS_PER_USER=1000
RATE_LIMIT_WINDOW=3600